import 'package:flutter/material.dart';

void main() {
  runApp(
    const MaterialApp(
      // For creating a frame of app
      home: Scaffold(
        // This is used to change the background
        backgroundColor: Color.fromARGB(182, 160, 255,
            173), // This is used to give backgrounf colour to app
        body: Center(
          // This is used to center the text
          child: Text("Hello"),
        ),
      ),
    ),
  );
}






import 'package:flutter/material.dart';

void main() {
  runApp(
    MaterialApp(
      // For creating a frame of app
      home: Scaffold(
        // This is used to change the background
        body: Container(
          decoration: const BoxDecoration(
            gradient: LinearGradient(colors: [
              Color.fromARGB(255, 167, 255, 170),
              Color.fromARGB(255, 167, 255, 170)
            ], begin: Alignment.bottomLeft, end: Alignment.bottomRight),
          ),
          child: const Center(
            // This is used to center the text
            child: Text("EcoStride",
                style: TextStyle(
                  color: Colors.black,
                  fontSize: 28,
                )),
          ),
        ),
      ),
    ),
  );
}





